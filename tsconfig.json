{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": ["typings/**/*.d.ts", "src/**/*"]
}
